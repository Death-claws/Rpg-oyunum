//bu kod saldırı faktörü çalışıyormu çalışmıyormu kontrol etmek için vardır eğer bu olmaz ise animasyonlar yarıda kesilebilir kötü bir görüntü sağlar.

using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class attackBeh : StateMachineBehaviour
{
    
    override public void OnStateEnter(Animator animator, AnimatorStateInfo stateInfo, int layerIndex)
    {
        animator.SetBool("isAttack", true);
    }

    override public void OnStateExit(Animator animator, AnimatorStateInfo stateInfo, int layerIndex)
    {
        animator.SetBool("isAttack", false);
        animator.ResetTrigger("Saldır");
    }
}
