using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class Ä°KLook : MonoBehaviour
{

    float wheight = 6;
    Animator anim;
    Camera mainCam;

    void Start()
    {
        anim = GetComponent<Animator>();
        mainCam = Camera.main;
    }

    private void OnAnimatorIK(int layerIndex)
    {

        anim.SetLookAtWeight(wheight, .5f, 1.2f, .5f, .5f);

        Ray lookAtRay = new Ray(transform.position, mainCam.transform.forward);
        anim.SetLookAtPosition(lookAtRay.GetPoint(25));

    }

    public void art()
    {
        wheight = Mathf.Lerp(wheight, 6f, Time.fixedDeltaTime);
    }
    public void azal()
    {
        wheight = Mathf.Lerp(wheight, 0, Time.fixedDeltaTime);
    }
}
